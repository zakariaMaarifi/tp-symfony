{% extends 'base.html.twig' %}

{% block title %}Coach{% endblock %}

{% block body %}
    <h1>Coach</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ coach.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ coach.Nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ coach.Prenom }}</td>
            </tr>
            <tr>
                <th>Specialite</th>
                <td>{{ coach.specialite }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_coach_index') }}">back to list</a>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_coach_edit', {'id': coach.id}) }}">edit</a>

    {{ include('coach/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
